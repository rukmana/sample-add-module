<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="10dip" />
      <stroke android:width="0dip" android:color="@color/colorPrimaryDark" />
      <gradient android:angle="180" android:endColor="@color/colorPrimary40" android:startColor="@color/colorPrimary40" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle">
      <corners android:radius="10dip" />
      <stroke android:width="0dip" android:color="@color/colorPrimaryDark" />
      <solid android:color="@color/color_grey_darker" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="10dip" />
      <stroke android:width="0dip" android:color="@color/colorPrimary" />
      <gradient android:angle="180" android:endColor="@color/white" android:startColor="@color/white" />
    </shape>
  </item>
</selector>