<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="10dip" />
      <stroke android:width="2dip" android:color="@color/colorAccent" />
      <gradient android:angle="180" android:endColor="@color/colorAccent_15" android:startColor="@color/colorAccent_15" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle">
      <corners android:radius="10dip" />
      <stroke android:width="2dip" android:color="@color/colorAccent" />
      <solid android:color="@color/colorAccent_15" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="10dip" />
      <stroke android:width="2dip" android:color="@color/colorAccent" />
      <gradient android:angle="180" android:endColor="@color/colorAccent_15" android:startColor="@color/colorAccent_15" />
    </shape>
  </item>
</selector>